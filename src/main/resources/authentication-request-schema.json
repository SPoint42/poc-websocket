{
  "$schema": "http://json-schema.org/schema#",
  "title": "AuthenticationRequest",
  "type": "object",
  "properties": {
    "login": {
      "type": "string",
      "pattern": "^[a-zA-Z]{1,10}$"
    },
    "password": {
      "type": "string"
    }
  },
  "required": [
    "login",
    "password"
  ]
}